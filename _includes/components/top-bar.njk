<div class="top-bar-container">

    <button type="button" class="btn btn-outline-primary top-bar-close" onclick="resetMap();" aria-label="Close"><i class="bi bi-x-lg"></i></button>


        {% if 'post' in tags %}
            <a {% if contact.website %} target="_blank" class="top-bar-cd-title active"{% else %} class="top-bar-cd-title" {% endif %}
                {% if contact.website %}
                  href="{{ contact.website }}"
                {% endif %}>
                {% if (logo) %}
                    <div class="">
                        <img class="logo" src="{{ logo }}">
                    </div>
                {% endif %}

                <h6 class="title">{{ titleShort }} CD</h6>
            </a>

            {# <button type="button" class="btn btn-outline-primary top-bar-close" aria-label="Admin"> #}

            <a class="btn btn-outline-primary top-bar-close" target="_blank" href="{{ '/admin/#/collections/blog/entries/' | url }}{{ title | slugify }}"><i class="bi bi-pencil-square"></i></a>


        {% endif %}

        {% if 'story' in tags %}
            <div class="row  align-items-center ps-3 pe-3">
               <h6 class="title m-0">{{ title }}</h6>
            </div>
        {% endif %}

</div>