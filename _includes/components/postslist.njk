<section>
	{% for post in postslist | reverse %}
		<article {% if post.url == url %} data-current="current item"{% endif %}>
			<h5>
				<a onclick="pageMapHandler('{{ post.data.id }}', 0)" href="{{ post.url | url }}">
					{% if post.data.titleShort %}
						{{ post.data.titleShort }}
					{% else %}
						Untitled
					{% endif %}
				</a>
			</h5>
			
			{% if post.data.tags %}
				<p>
					{% for tag in post.data.tags %}
		  			{%- if tag != "post" -%}
		  				{% set tagUrl %}/tags/{{ tag }}/{% endset %}
		  			<a href="{{ tagUrl | url }}" rel="tag">{{ tag }}</a>
		  			{%- endif -%}
					{% endfor %}
				</p>
			{% endif %}
		</article>
	{% endfor %}
</section>
